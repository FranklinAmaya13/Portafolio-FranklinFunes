---
import type { ProjectCard } from '../interfaces/Interface';

const { title, description, href, image } = Astro.props;

import { Image } from 'astro:assets';
---

<a href={href} class="max-w-sm mx-2 my-5 bg-white border border-gray-200 rounded-lg shadow-lg overflow-hidden">
    <div>
      <Image 
				  src={image}
					alt={title}
					width={400}
					height={400}
					class=" h-48 flex items-center justify-center"
				/>
    </div>
    <div class="p-4">
      <h2 class="text-xl font-semibold mb-2">{title}</h2>
      <p class="text-gray-600">{description}</p>
    </div>
</a>