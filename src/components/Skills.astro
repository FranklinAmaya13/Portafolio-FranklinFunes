---
import type { Skills } from "../interfaces/Interface";

interface Props {
  name: string
  skills: Skills
}

const { name, skills } = Astro.props;
---

<section>
  <h1 class="text-center text-4xl  font-semibold">{name}</h1>
  <div class="grid grid-cols-3 md:grid-cols-3 gap-8">
    
    {Object.entries(skills).map(([c, s]) => (
      <div class="bg-card rounded-lg p-6 shadow-lg mb-5">
        <h3 class="text-center mb-4 font-semibold">{c}</h3>
        <div class="space-y-4">
          {
            s
            .slice()
            .sort((a, b)=> b.level - a.level)
            .map((skill, index) => (
              <div>
                <div class="flex justify-between">
                  <span class="text-base font-semibold">{skill.name}</span>
                  <span class="text-base font-semibold">{skill.level}%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3 dark:bg-gray-500">
                  <div class="bg-blue-500 h-3 rounded-full" style={`width: ${skill.level}%`}></div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      
    ))
    }
  </div>
</section>


